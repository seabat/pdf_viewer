root = true

[*.{kt,kts}]
ktlint_code_style = android_studio
max_line_length = 100
ktlint_function_naming_ignore_when_annotated_with=Composable

# ktlint の末尾コンマ禁止設定
ktlint_standard_no-trailing-comma = enabled
ktlint_standard_no-trailing-comma_on-call-site = enabled
ktlint_standard_no-trailing-comma_on-declaration-site = enabled

# IntelliJ IDEA の末尾コンマ禁止設定
ij_kotlin_allow_trailing_comma = false
ij_kotlin_allow_trailing_comma_on_call_site = false

ktlint_standard_final-newline = disabled
ktlint_standard_package-name = disabled # "_"をパッケージ名に使用することを許可する
ktlint_standard_no-empty-class-body = disabled
ktlint_standard_function-signature=disabled